@{
    ViewBag.Title = "Autoshop Home";
    Layout = "../Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">Autoshop Administration</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card bg-dark text-white mb-4">
            <div class="card-body text-center">
                <i class="fas fa-industry fa-3x mb-3"></i>
                <h4 class="card-title">Manage Manufacturers</h4>
                <p class="card-text">Add, edit, or remove car manufacturers from your inventory.</p>
                <a href="@Url.Action("Manufacturers", "Autoshop")" class="btn btn-primary">Go to Manufacturers</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card bg-dark text-white mb-4">
            <div class="card-body text-center">
                <i class="fas fa-car fa-3x mb-3"></i>
                <h4 class="card-title">Manage Cars</h4>
                <p class="card-text">Add, edit, or remove cars from your inventory.</p>
                <a href="@Url.Action("Cars", "Autoshop")" class="btn btn-primary">Go to Cars</a>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">