<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - YourApp</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #1e1e2f;
            color: #ffffff;
            padding-bottom: 60px; /* Отступ для футера */
        }
        .navbar-dark .navbar-nav .nav-link {
            color: rgba(255, 255, 255, 0.75);
        }
        .navbar-dark .navbar-nav .nav-link:hover {
            color: rgba(255, 255, 255, 1);
        }
        .table {
            background-color: #2a2a3b;
            color: #ffffff;
        }
        .table thead th {
            border-bottom: 2px solid #444;
        }
        .table tbody tr {
            border-bottom: 1px solid #444;
        }
        .table tbody tr:last-child {
            border-bottom: none;
        }
        .table .btn {
            color: #fff;
        }
        .table .btn-primary {
            background-color: #007bff;
            border: none;
        }
        .table .btn-primary:hover {
            background-color: #0056b3;
        }
        .footer {
            background-color: #212529;
            color: #868e96;
            padding: 10px 0;
            text-align: center;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
        .container {
            margin-top: 20px;
        }
    </style>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">YourApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Services", "Services", "Home", new { area = "" }, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Gallery", "Gallery", "Home", new { area = "" }, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Client", "Client", "Home", new { area = "" }, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })
            </li>
            @if (!User.Identity.IsAuthenticated)
            {
            <li class="nav-item">
                @Html.ActionLink("Login", "Login", "Account", new { area = "" }, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Register", "Register", "Account", new { area = "" }, new { @class = "nav-link" })
            </li>
            }
            else
            {
            if (User.IsInRole("Administrator"))
            {
            <li class="nav-item">
                @Html.ActionLink("Admin Panel", "Index", "Autoshop", new { area = "" }, new { @class = "nav-link" })
            </li>
            }
            <li class="nav-item">
                @Html.ActionLink("Logout", "Logout", "Account", new { area = "" }, new { @class = "nav-link" })
            </li>
            }
        </ul>
    </div>
</nav>
<div class="container">
    @RenderBody()
</div>
<footer class="footer">
    <div class="container">
        <p>&copy; @DateTime.Now.Year - YourApp</p>
    </div>
</footer>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
